      <PasswordField fx:id="paswPassword" layoutX="45.0" layoutY="172.0" promptText="Password" />
      <ImageView fx:id="logoImgView" fitHeight="149.0" fitWidth="237.0" layoutX="26.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../Resources/Pictures/logo.png" />
